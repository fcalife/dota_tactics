<root>
	<styles>
		<include src="file://{resources}/styles/custom_game/game_events.css" />
	</styles>

	<scripts>
		<include src="file://{resources}/scripts/custom_game/game_events.js" /> 
	</scripts>

	<Panel hittest="false">
		<Panel id="basic_menu">
			<Label id="timer" text="90"/>
			<Panel class="menu_row">
				<Label id="radiant_ap_label" class="left_label" text="Green Action points: "/>
				<Label id="radiant_ap" class="right_label" text="2"/>
			</Panel>
			<Panel class="menu_row">
				<Label id="dire_ap_lavel" class="left_label" text="Red Action points: "/>
				<Label id="dire_ap" class="right_label" text="0"/>
			</Panel>
			<Panel class="menu_row">
				<Label id="radiant_mana_label" class="left_label" text="Green Mana: "/>
				<Label id="radiant_mana" class="right_label" text="1"/>
			</Panel>
			<Panel class="menu_row">
				<Label id="dire_mana_label" class="left_label" text="Red Mana: "/>
				<Label id="dire_mana" class="right_label" text="0"/>
			</Panel>
			<Panel id="end_turn_button" onmouseactivate="RequestEndTurn()">
				<Label id="end_turn_label" text="End Turn"/>
			</Panel>
		</Panel>
	</Panel>
</root>